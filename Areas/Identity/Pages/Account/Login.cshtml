@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
        <label asp-for="Input.Email" class="form-label">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" placeholder="password" />
        <label asp-for="Input.Password" class="form-label">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe" class="form-label mb-0">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <div class="mb-2 row justify-content-around">
        <button id="login-submit" type="submit" class="btn btn-lg btn-special col-5">Log in</button>
        <a href="/" class="btn btn-lg btn-special col-5">Cancel</a>
    </div>
    <div>
        <p class="m-0">
            <a class="text-white" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p class="m-0">
            <a class="text-white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p class="m-0">
            <a class="text-white" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>
</form>
